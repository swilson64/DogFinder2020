@model IEnumerable<DogFinder.Dog>

@{
    ViewBag.Title = "Index";
}

<h2>Dog Register</h2>

<p>
    @Html.ActionLink("Register New Dog", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            Sex
        </th>
        <th>
            Dog Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FavFood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            Dog Status
        </th>
        <th>
            Size
        </th>
        <th>
            Dog Type
        </th>
        <th>
            Allergies
        </th>
        <th>
            Dangerous?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        @(item.Sex ? "Male" : "Female")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FavFood)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DogStatu.StatusName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DogSize.SizeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DogType.TypeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Allergies)
    </td>
    <td>
        @(item.IsDangerous ? "Yes" : "No")
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.DogID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DogID }) |
        @Html.ActionLink("View QR Code", "QRCode", new { id = item.DogID })
    </td>
</tr>
}

</table>
